
@model List<News>


    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>الأخبار @ViewData["cat"]</h2>
            </div>
            <center>

                <div class="row" style="margin:30px">
                    @foreach (var item in Model)
                    {
                        <div class="col-12">
                            <img src="~/Images/News/@item.Image" class="img-fluid" style="height:300px;width:300px; border-radius:50%;" alt="">
                        </div>
                        <div class="col-sm-12">
                            <h3>@item.Title</h3>
                            <p>تاريخ الخبر</p>
                            <h4>@item.Date</h4>
                            <p class="fst-italic">
                                @item.Topic
                            </p>
                            
                        </div>
                        <center><a class="btn btn-danger" href="/Home/DeleteNews/@item.Id">حذف</a></center>
                        <p></p>
                        <hr />
                    }
                </div>

            </center>
        </div>
    </section>